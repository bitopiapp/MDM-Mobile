<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“± PhoneLock"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Loading..."
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:gravity="start"
                android:layout_marginBottom="16dp"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- Device Admin Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Device Admin"
                android:textSize="16sp"
                android:textColor="#FF5722"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnEnableAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Device Admin"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FF5722" />


            <!-- Factory Reset Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Factory Reset Control"
                android:textSize="16sp"
                android:textColor="#2196F3"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/disableFactoryReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disable Factory Reset"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#FF9800" />



            <!-- FCM Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡ Firebase Cloud Messaging"
                android:textSize="16sp"
                android:textColor="#00BCD4"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnGetFcmToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get FCM Token"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2196F3" />







        </LinearLayout>
    </ScrollView>

</LinearLayout>